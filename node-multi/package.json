{
  "scripts": {
    "start": "PROCESS_TYPE=web concurrently -k -p \"[{name}]\" -n \"Web,Worker\" -c \"cyan.bold,green.bold\" \"npm run start-api\" \"npm run start-worker\"",
    "start-api": "PROCESS_TYPE=web concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "start-worker": "PROCESS_TYPE=worker concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "npm run lint && npm run test:models && npm run test:web && npm run test:worker",
    "test:web": "NODE_ENV=test PROCESS_TYPE=web mocha -r ts-node/register -r tsconfig-paths/register 'web/test.setup.ts' 'web/**/*.spec.ts' --exit",
    "test:models": "NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register 'models/test.setup.ts' 'models/**/*.spec.ts' --exit",
    "test:worker": "NODE_ENV=test PROCESS_TYPE=worker mocha -r ts-node/register -r tsconfig-paths/register 'worker/test.setup.ts' 'worker/**/*.spec.ts' --exit",
    "lint": "tslint -c './shared/tslint.json' -e '**/*.d.ts' -e 'node_modules/**/*.ts' '**/*.ts'",
    "lint-fix": "npm run lint -- --fix",
    "build-ts": "webpack --config webpack.config.ts",
    "watch-ts": "npm run build-ts -- --watch",
    "watch-node": "NODE_ENV=development nodemon dist/",
    "migrate-db": "ts-node ./scripts/migrate-db"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.0.0",
    "ioredis": "^3.2.2",
    "joi": "13.5.2",
    "jsonwebtoken": "^8.3.0",
    "knex": "0.15.2",
    "koa": "2.5.2",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "4.1.0",
    "koa-jwt": "^3.3.1",
    "koa-router": "7.4.0",
    "koa2-cors": "^2.0.6",
    "lodash": "4.17.10",
    "nodemailer": "4.6.7",
    "pg": "7.4.3",
    "pg-connection-string": "2.0.0",
    "qs": "6.5.2",
    "request": "2.87.0",
    "request-promise-native": "1.0.5",
    "semver": "^5.5.0",
    "uuid": "^3.3.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/dotenv": "^4.0.3",
    "@types/ioredis": "^3.2.13",
    "@types/joi": "^13.4.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/knex": "^0.14.19",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "5.0.1",
    "@types/koa-router": "^7.0.31",
    "@types/koa2-cors": "^2.0.1",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.6",
    "@types/nodemailer": "^4.6.2",
    "@types/qs": "^6.5.1",
    "@types/semver": "^5.5.0",
    "@types/sinon": "^5.0.0",
    "@types/sinon-chai": "^3.2.0",
    "@types/uuid": "^3.4.3",
    "@types/webpack-node-externals": "^1.6.3",
    "@types/winston": "^2.3.9",
    "chai": "4.1.2",
    "chai-http": "^4.0.0",
    "concurrently": "^3.6.1",
    "mocha": "5.2.0",
    "nodemon": "1.18.3",
    "sinon": "6.1.4",
    "sinon-chai": "3.2.0",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.5.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.11.0",
    "typescript": "2.9.2",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "engines": {
